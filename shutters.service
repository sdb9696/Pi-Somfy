
[Unit]
Description=Pi Somfy Shutter Service
After=network-online.target

[Service]
User=root
ExecStart=sudo /home/Pi-SomfyEnv/bin/python /home/Pi-SomfyCode/operateShutters.py -c /home/Pi-SomfyCode/operateShutters.conf -a -e
Environment=PYTHONUNBUFFERED=1
Restart=on-failure
Type=exec


[Install]
WantedBy=multi-user.target